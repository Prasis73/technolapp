<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#40868A8B"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="08dp"
        android:background="#E8F1F8">

        <ImageView
            android:id="@+id/remove"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/remove"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/rcdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rcname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="jkldjafsld jl jljf d"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rcadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rcname"
            android:layout_centerHorizontal="true"
            android:text="Itahari,Nepal"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rcno1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rcadd"
            android:layout_alignParentStart="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="-1dp"
            android:text="Account No: "
            android:textColor="#EE970C"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rcno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rcadd"

            android:layout_marginStart="7dp"
            android:layout_marginLeft="104dp"

            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/rcno1"
            android:text="Account No"
            android:textColor="#6234E7"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rcremark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rcno1"
            android:layout_centerHorizontal="true"
            android:text="Electricity bill paid"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/riamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:text="Rs.12000"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>